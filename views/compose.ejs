<%- include("partials/header", { title: "Compose" }) %>

<h1 class="text-center mb-4 txt">Compose New Post</h1>

<form action="/compose" method="POST" class="mx-auto" style="max-width: 600px;">
  <div class="mb-3">
    <label for="postTitle" class="form-label">Title</label>
    <input type="text" class="form-control" id="postTitle" name="postTitle" required />
  </div>
  <div class="mb-3">
    <label for="postBody" class="form-label">Content</label>
    <textarea class="form-control" id="postBody" name="postBody" rows="6" required></textarea>
  </div>
  <button type="submit" class="btn btn-success w-100">Publish</button>
</form>

<%- include("partials/footer") %>
